# Binary file extensions that should not be modified.
*.axdt binary
*.addin binary
Form.bin binary
*.bin binary
*.png binary
*.ico binary

# Text file extensions
* text=auto
*.htm text eol=crlf
*.html text eol=crlf
renames.txt text eol=crlf

*.bsl  text eol=crlf
*.os text eol=crlf
ParentConfigurations.bin text eol=lf

*.xml text eol=crlf
*.feature text
*.md text
*.json text

*.bat text eol=crlf
*.cmd text eol=crlf

*.sh text eol=lf
*.groovy text eol=lf

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary
*.zip binary

# 1C
*.cf binary
*.cfe binary
*.epf binary
*.erf binary

# Git LFS
src/Ext/ParentConfigurations/*.cf filter=lfs diff=lfs merge=lfs -text
src/CommonTemplates/*/Ext/*.bin filter=lfs diff=lfs merge=lfs -binary